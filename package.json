{
  "name": "aetherium-browser",
  "version": "1.0.0",
  "description": "Ethereal Simplicity, Essential Power",
  "main": "desktop/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite desktop/renderer",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build desktop/renderer",
    "build:electron": "electron-builder",
    "mobile:android": "cd mobile && npx react-native run-android",
    "mobile:ios": "cd mobile && npx react-native run-ios"
  },
  "keywords": ["browser", "web", "privacy", "minimal"],
  "author": "Aetherium Team",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.290.0",
    "color-thief-react": "^2.1.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "build": {
    "appId": "com.aetherium.browser",
    "productName": "Aetherium",
    "directories": {
      "output": "dist"
    },
    "files": [
      "desktop/main/**/*",
      "desktop/renderer/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    }
  }
}
